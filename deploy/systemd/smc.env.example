# /etc/smc/smc.env
# Мінімум для схеми "конектор + SMC" на одному VPS з локальним Redis.

# Redis (локальний)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# Увімкнути web-стек UI_v2 (HTTP/WS + FXCM WS bridge)
UI_V2_ENABLED=1

# HTTP сервер (віддає / + /smc-viewer/*)
SMC_VIEWER_HTTP_HOST=127.0.0.1
SMC_VIEWER_HTTP_PORT=8080

# WS сервер для viewer_state (потрібен фронтенду для /smc-viewer/stream)
SMC_VIEWER_WS_HOST=127.0.0.1
SMC_VIEWER_WS_PORT=8081
SMC_VIEWER_WS_ENABLED=1

# WS міст для FXCM каналів (потрібен фронтенду для /fxcm/*)
FXCM_OHLCV_WS_HOST=127.0.0.1
FXCM_OHLCV_WS_PORT=8082
FXCM_OHLCV_WS_ENABLED=1

# Логи
LOG_LEVEL=INFO

# Опційно: увімкнути debug viewer в консолі (не треба для VPS)
# DEBUG_VIEWER_ENABLED=0
